<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qrcode.QRScanActivity">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/dbv_scan_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_qr_reader_explanation"
        app:zxing_scanner_layout="@layout/custom_barcode_scanner" />

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:minWidth="32dp"
        android:minHeight="32dp"
        android:onClick="onClose"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/close_button"
        tools:ignore="SpeakableTextPresentCheck" />


    <Button
        android:id="@+id/bt_my_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_qr_reader_explanation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/round_button_primary"
        android:onClick="onMyQRCodeButtonClick"
        android:text="@string/my_qrcode"
         />

    <TextView
        android:id="@+id/tv_qr_reader_explanation"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/qr_reader_explanation"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/white"
        android:background="@color/black" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
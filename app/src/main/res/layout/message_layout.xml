<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cl_message"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_sentMessage_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="00:00" />

        <TextView
            android:id="@+id/tv_sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:background="@drawable/outgoing_bubble"
            android:padding="12dp"
            android:textColor="@color/black"
            tools:text="今何してる？" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_received_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/ll_sent"
        app:layout_constraintTop_toBottomOf="@id/ll_sent">

        <ImageView
            android:id="@+id/iv_received_celebrate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/celebrate" />

        <ImageView
            android:id="@+id/iv_received_crying"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/crying" />

        <ImageView
            android:id="@+id/iv_received_furious"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/furious" />

        <ImageView
            android:id="@+id/iv_received_pleading"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/pleading" />

        <ImageView
            android:id="@+id/iv_received_wink"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/wink" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_received_reaction"
        tools:visibility="visible">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/default_profile"
            app:civ_border="false" />

        <TextView
            android:id="@+id/tv_received_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:background="@drawable/incoming_bubble"
            android:padding="12dp"
            android:textColor="@color/black"

            tools:text="今何してる？" />

        <TextView
            android:id="@+id/tv_received_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="00:00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSent_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/ll_received"
        app:layout_constraintTop_toBottomOf="@+id/ll_received">

        <ImageView
            android:id="@+id/iv_sent_celebrate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/celebrate" />

        <ImageView
            android:id="@+id/iv_sent_crying"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/crying" />

        <ImageView
            android:id="@+id/iv_sent_furious"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/furious" />

        <ImageView
            android:id="@+id/iv_sent_pleading"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/pleading" />

        <ImageView
            android:id="@+id/iv_sent_wink"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/wink" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
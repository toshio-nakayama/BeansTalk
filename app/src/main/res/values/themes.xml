<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeansTalk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">?attr/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Text Color. -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorLink">#1a0dab</item>
        <!-- Background Color. -->
        <item name="android:windowBackground">@android:color/background_dark</item>

    </style>

    <style name="Theme.BeansTalk.Lime" parent="Theme.BeansTalk">
        <item name="colorPrimary">@color/lime</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/lime</item>
    </style>

    <style name="Theme.BeansTalk.Turquoise" parent="Theme.BeansTalk">
        <item name="colorPrimary">@color/turquoise</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/turquoise</item>
    </style>

    <style name="Theme.BeansTalk.Yellow" parent="Theme.BeansTalk">
        <item name="colorPrimary">@color/yellow</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/yellow</item>
    </style>

    <style name="Theme.BeansTalk.Emerald" parent="Theme.BeansTalk">
        <item name="colorPrimary">@color/emerald</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/emerald</item>
    </style>

    <style name="Theme.BeansTalk.Toolbar" parent="Theme.BeansTalk">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="EditTextStyle" parent="Theme.BeansTalk">
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
    </style>
</resources>